{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
        "url": "https://raw.githubusercontent.com/ShenyiHu/FIT3179_S2_2022/main/Data_Visualisation_2/data/prices_all.csv",
        "format": {
            "parse": {
                "Expensive": "number"
            }
        }
    },
    "width": "container",
    "title": "Countries with the Most Expensive Plan",
    "config": {
        "axis": {
            "labelFont": "Monaco",
            "titleFont": "Monaco",
            "labelFontSize": 12,
            "titleFontSize": 14
        },
        "legend": {
            "labelFont": "Monaco",
            "titleFont": "Monaco",
            "padding": 10,
            "labelFontSize": 12,
            "titleFontSize": 14
        },
        "header": {
            "labelFont": "Monaco",
            "titleFont": "Monaco"
        },
        "mark": {
            "font": "Monaco"
        },
        "title": {
            "font": "Monaco",
            "subtitleFont": "Monaco",
            "fontSize": 14
        },
        "text": {
            "font": "Monaco",
            "color": "white"
        },
        "background": "antiquewhite"
    },
    "encoding": {
        "x": {
            "field": "Expensive",
            "title": "Price per Gigabyte",
            "type": "quantitative",
            "scale": {
                "domain": [
                    0,
                    220
                ]
            }
        },
        "y": {
            "field": "Country",
            "type": "nominal",
            "sort": "-x"
        }
    },
    "transform": [
        {
            "window": [
                {
                    "op": "rank",
                    "as": "Rank"
                }
            ],
            "sort": [
                {
                    "field": "Expensive",
                    "order": "descending"
                }
            ]
        },
        {
            "filter": "datum.Rank <= 10"
        }
    ],
    "layer": [
        {
            "mark": "bar",
            "encoding": {
                "x": {
                    "field": "Expensive",
                    "title": "Price per Gigabyte",
                    "type": "quantitative",
                    "scale": {
                        "domain": [
                            0,
                            220
                        ]
                    }
                },
                "y": {
                    "field": "Country",
                    "type": "nominal",
                    "sort": null
                }
            }
        },
        {
            "mark": {
                "type": "text",
                "align": "right",
                "baseline": "middle",
                "dx": -10
            },
            "encoding": {
                "text": {
                    "field": "Expensive",
                    "type": "quantitative"
                }
            }
        }
    ]
}