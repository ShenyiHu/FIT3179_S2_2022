{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Global Internet Prices in 2022 (Average price per GB, in USD)",
  "width": 820,
  "height": 400,
  "config": {
    "axis": {
      "labelFont": "Monaco",
      "titleFont": "Monaco",
      "labelFontSize": 12,
      "titleFontSize": 14
    },
    "legend": {
      "labelFont": "Monaco",
      "titleFont": "Monaco",
      "padding": 10,
      "labelFontSize": 12,
      "titleFontSize": 14
    },
    "header": {
      "labelFont": "Monaco",
      "titleFont": "Monaco"
    },
    "mark": {
      "font": "Monaco"
    },
    "title": {
      "font": "Monaco",
      "subtitleFont": "Monaco",
      "fontSize": 16
    }
  },
  "projection": {
    "type": "equalEarth"
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/ShenyiHu/FIT3179_S2_2022/main/Data_Visualisation_2/js/ocean.json",
        "format": {
          "type": "topojson",
          "feature": "oceans"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "skyblue"
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/ShenyiHu/FIT3179_S2_2022/main/Data_Visualisation_2/js/ne_110m.json",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_graticules_30"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": null,
        "stroke": "lightgray"
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/ShenyiHu/FIT3179_S2_2022/main/Data_Visualisation_2/js/ne_110m.json",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_admin_0_countries"
        }
      },
      "layer": [
        {
          "transform": [
            {
              "calculate": "'Data is not available in ' + datum.properties.NAME",
              "as": "note"
            }
          ],
          "mark": {
            "type": "geoshape",
            "fill": "lightgray",
            "stroke": "white"
          },
          "encoding": {
            "tooltip": {
              "field": "note"
            }
          }
        },
        {
          "transform": [
            {
              "lookup": "properties.NAME",
              "from": {
                "data": {
                  "url": "https://raw.githubusercontent.com/ShenyiHu/FIT3179_S2_2022/main/Data_Visualisation_2/data/prices.csv"
                },
                "key": "Country",
                "fields": [
                  "Price"
                ]
              }
            }
          ],
          "mark": {
            "type": "geoshape"
          },
          "encoding": {
            "color": {
              "field": "Price",
              "type": "quantitative",
              "title": "Price per gigabyte",
              "scale": {
                "type": "threshold",
                "domain": [
                  1,
                  5,
                  10
                ],
                "range": [
                  "#fdbe85",
                  "#fd8d3c",
                  "#e6550d",
                  "#a63603"
                ]
              }
            },
            "tooltip": [
              {
                "field": "properties.NAME",
                "type": "nominal",
                "title": "Country"
              },
              {
                "field": "Price",
                "type": "quantitative"
              }
            ]
          }
        }
      ]
    }
  ]
}