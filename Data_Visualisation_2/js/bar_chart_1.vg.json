{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
        "url": "https://raw.githubusercontent.com/ShenyiHu/FIT3179_S2_2022/main/Data_Visualisation_2/data/prices_all.csv",
        "format": {
            "parse": {
                "Cheap": "number"
            }
        }
    },
    "width": "container",
    "title": "Countries with the Cheapest Plan",
    "config": {
        "axis": {
            "labelFont": "Monaco",
            "titleFont": "Monaco",
            "labelFontSize": 12,
            "titleFontSize": 14
        },
        "legend": {
            "labelFont": "Monaco",
            "titleFont": "Monaco",
            "padding": 10,
            "labelFontSize": 12,
            "titleFontSize": 14
        },
        "header": {
            "labelFont": "Monaco",
            "titleFont": "Monaco"
        },
        "mark": {
            "font": "Monaco"
        },
        "title": {
            "font": "Monaco",
            "subtitleFont": "Monaco",
            "fontSize": 14
        },
        "background": "antiquewhite"
    },
    "mark": {
        "type": "bar"
    },
    "encoding": {
        "x": {
            "field": "Cheap",
            "title": "Price per Gigabyte",
            "type": "quantitative"
        },
        "y": {
            "field": "Country",
            "type": "nominal",
            "sort": "-x"
        }
    },
    "transform": [
        {
            "window": [
                {
                    "op": "rank",
                    "as": "Rank"
                }
            ],
            "sort": [
                {
                    "field": "Cheap",
                    "order": "descending"
                }
            ]
        },
        {
            "filter": "datum.Rank <= 10"
        }
    ]
}